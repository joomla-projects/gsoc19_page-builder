	<author>Joomla! Project</author>
	<creationDate>June 2019</creationDate>
	<copyright>Copyright (C) 2005 - 2019 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>4.0.0</version>
	<description>PLG_PAGEBUILDER_MODULEPOSITION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="moduleposition">moduleposition.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_pagebuilder_moduleposition.ini</language>
		<language tag="en-GB">en-GB.plg_pagebuilder_moduleposition.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="plugins/editors/pagebuilder">
				<field
					name="context"
					type="context"
					label="PLG_PAGEBUILDER_MODULEPOSITION_CONTEXT_LABEL"
					default="*"
				/>
				<field
					name="extensions"
					type="folderlist"
					default=""
					label="PLG_PAGEBUILDER_MODULEPOSITION_EXTENSIONS_LABEL"
					directory="administrator"
					recursive="true"
					multiple="true"
					hide_default="true"
					folderFilter="^com_|mod_"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
